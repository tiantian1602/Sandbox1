BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_miles
            font_size:40
            on_text: app.convert_miles_to_km()
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.increment_miles(1)
            Button:
                text: 'Down'
                on_press: app.increment_miles(-1)
#    Button:
#        text: 'Convert m to km'
#        on_press: app.convert_miles_to_km()
    Label:
        id: output_label
        color: (1, 1, 0, 1)
        text: app.converted_miles
        font_size:40
